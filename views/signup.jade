extends layout

block content
    if errorMessage
        p(style="color: red;") #{errorMessage}
    if successMessage
        p(style="color: green;") #{successMessage}

    div#message
        span
            | Already have an account?
            a(href="/", id="toggleSignIn") Sign in

    form#authForm(method="POST", action="/signup")
        div.form-email
            label(for="email") Email:
            input(type="email", id="email", name="email", placeholder="example@example.com", required)

        div.form-password
            label(for="password") Password:
            input(type="password", id="password", name="password", placeholder="securePassword@", required)

        button(type="submit") Sign up